

<div class="row" ng-app="MR" ng-controller="mrCtrl" ngcloak>
    <h3 class="page-header" ng-show="!loading">{{title}}</h3>

    <div class="col-lg-11">

        <h4 ng-show="loading">Adds Loading...</h4>
        <div ng-show="!loading" class="row">
            <div class="col-lg-3">
                <div class="form-group">
                    <select ng-model="perPage" class="form-control">
                        <option ng-selected="!loading" value="10">10 records per page</option>
                        <option value="25">25 records per page</option>
                        <option value="70">70 records per page</option>
                        <option value="100">100 records per page</option>

                    </select>
                </div>

            </div>
            <div class="col-lg-3">
                <div class="form-group">
                    <input placeholder="Search by Brand Name" class="form-control" type="text" ng-model="search.BrandName" name="name" value=" "/>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="form-group">
                    <select ng-model="search.Position" class="form-control">
                        <option ng-selected="!loading" value="">Show All</option>
                        <option value="Cover">Show Only Cover</option>
                        <option value="Page">Show only Page</option>


                    </select>
                </div>

            </div>

            <div class="col-lg-3">
                <div class="form-group">
                    <select ng-model="extraFilters" class="form-control">
                        <option ng-selected="true" value="All">Show All</option>
                        <option value="Cover">Show Cover w/%50</option>
                        <option value="TopFive">Show Top 5</option>


                    </select>
                </div>

            </div>
        </div>
        <table  ng-show="!loading" class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>#</th>
                <th>AdId</th>
                <th>Brand Id</th>
                <th>Brand Name</th>

                <th>Pages</th>
                <th>Position</th>
            </tr>
            </thead>
            <tbody>

                <tr dir-paginate="add in adds | itemsPerPage: perPage||10 | filter:search">
                    <td>{{$index+1}}</td>
                    <td>{{add.AdId}}</td>
                    <td>{{add.BrandId}}</td>
                    <td>{{add.BrandName}}</td>
                    <td>{{add.NumPages}}</td>
                    <td>{{add.Position}}</td>
                </tr>

            </tbody>

        </table>

        <dir-pagination-controls template-url="~/Scripts/Angular/dirPagination.tpl.html"></dir-pagination-controls>
    </div>
</div>


@section Scripts {
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/Angular/app.js"></script>
    <script src="~/Scripts/Angular/pagination.js"></script>
    <script src="~/Scripts/Angular/service.js"></script>
    <script src="~/Scripts/Angular/controller.js"></script>

}